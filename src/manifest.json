{
    "manifest_version": 3,

    "name": "Github Plus",
    "description": "Adds some functions to Github",
    "version": "1.2",

    "icons": {
        "32": "img/icon_32.png",
        "256": "img/icon_256.png",
        "512": "img/icon_512.png"
    },

    "permissions": [
        "activeTab"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_icon": {
            "32": "img/icon_32.png",
            "256": "img/icon_256.png",
            "512": "img/icon_512.png"
        },
        "default_title": "Github Plus",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
          "matches": [
            "https://github.com/*"
          ],
          "js": ["content.js"]
        }
      ]
}
